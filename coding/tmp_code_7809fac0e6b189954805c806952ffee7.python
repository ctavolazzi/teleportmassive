def game_loop():
    while True:
        display_start()
        choice = input("Enter your choice (1-4, or 'exit' to quit): ")
        
        if choice.lower() == 'exit':
            logging.info("Player chose to exit the game.")
            print("Thank you for playing!")
            break
        
        handle_choice(choice)
        log_game_state()
        print(generate_dialogue())