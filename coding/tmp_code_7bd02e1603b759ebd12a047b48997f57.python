def handle_choice(choice):
    if choice == "1":
        librarian("look_out_window")
    elif choice == "2":
        librarian("check_phone")
    elif choice == "3":
        librarian("get_dressed")
    elif choice == "4":
        action = input("What unexpected action does Sam take? ")
        librarian("other_action")
        logging.info(f"Sam takes an unexpected action: {action}")
    else:
        logging.warning("Invalid choice. Please choose again.")